<div class="row">
   <%= link_to '新規イベント作成', new_plan_path, class: 'btn btn-success color-white' %>
</div>

<table class="table">
  <thead>
    <tr>
      <th>タイトル</th>
      <th>詳細</th>
      <th>幹事</th>
      <th>人数</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @plans.each do |plan| %>
      <tr>
        <td><%= plan.title %></td>
        <td><%= plan.detail[0..40] %></td>
        <td><img src="<%= plan.user.avatar_small %>" /> <%= plan.user.profile.name %></td>
        <td><%= plan.users.size %>/<%= plan.size %></td>
        <td><%= link_to '詳細', plan %></td>
        <% if @user.kanji?(plan) %>
          <td><%= link_to '変更', edit_plan_path(plan) %></td>
          <td><%= link_to '削除', plan, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
