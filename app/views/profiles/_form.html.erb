<%= form_for(@profile, html: {class: 'form-horizontal'}) do |f| %>
  <legend>Profile</legend>
  <% if @profile.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@plan.errors.count, "error") %> prohibited this plan from being saved:</h2>
      <ul>
      <% @plan.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="control-group">
    <label class="control-label">ID</label>
    <div class="controls">
      <%= @user.login %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :name, "名前", {class: 'control-label'} %>
    <div class="controls">
      <%= f.text_field :name, {class: 'input-xxlarge'} %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :mail, "Email", {class: 'control-label'} %>
    <div class="controls">
      <%= f.text_field :mail, {class: 'input-xxlarge'} %>
    </div>
  </div>
  <div class="control-group">
    <div class="controls">
      <%= f.submit '登録', {class: 'btn'} %>
    </div>
  </div>
<% end %>
